	;;
cygwin*)
	alias ls='ls -hF --color=auto --show-control-chars'
	alias eo='explorer .'
	export EDITOR='emacsclient -a /cygdrive/e/Desktop/emacs-23.1.91/bin/runemacs.exe'
	;;
esac
